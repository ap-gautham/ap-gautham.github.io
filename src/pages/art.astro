  <style>
    .masonry-gallery {
      columns: 2;
      column-gap: 1rem;
      margin-top: 1.5rem;
    }

    .masonry-item {
      break-inside: avoid;
      margin-bottom: 1rem;
    }

    .masonry-item img {
      width: 100%;
      height: auto;
      display: block;
      border-radius: 4px;
      border: 2px solid rgb(255, 255, 255);
      box-shadow: 0 0 3px 0px rgba(223, 219, 195, 0.84);
      transition: box-shadow 0.3s ease, border-color 0.3s ease;
      cursor: pointer;
    }

    .masonry-item img:hover {
      border-color: rgba(255, 255, 255, 0.9);
      box-shadow: 0 0 20px 5px rgba(237, 216, 98, 0.4);
    }

    @media (max-width: 768px) {
      .masonry-gallery {
        columns: 2;
      }
    }

    .myself-img {
      display: block;
      margin: 1rem auto;
      max-width: 400px;
      width: 100%;
      height: auto;
      border-radius: 4px;
      border: 2px solid rgb(255, 255, 255);
      box-shadow: 0 0 3px 0px rgba(223, 219, 195, 0.84);
      transition: box-shadow 0.3s ease, border-color 0.3s ease;
      cursor: pointer;
    }

    .myself-img:hover {
      border-color: rgba(255, 255, 255, 0.9);
      box-shadow: 0 0 20px 10px rgba(225, 203, 79, 0.4);
    }

    @media (max-width: 480px) {
      .masonry-gallery {
        columns: 1;
      }
    }
  </style>

  <script>
    import GLightbox from 'glightbox';
    import 'glightbox/dist/css/glightbox.min.css';

    const lightbox = GLightbox({
      selector: '.glightbox',
      touchNavigation: true,
      loop: true,
      closeButton: true,
      zoomable: true,
    });
  </script>
