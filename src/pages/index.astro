---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";
import createSlug from "../lib/createSlug"

const posts = (await getCollection("blog")).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const last_posts = posts.slice(0, 3);
---

<BaseLayout sideBarActiveItemID="home">

  <div class="pb-12 mt-5">
    <div class="text-xl py-1">Namaste!</div>
    <div class="text-5xl font-bold">I am Gautham Adamane Pallathadka</div>
    <div class="text-3xl py-3 font-bold">Astrophysicist (and an amateur artist, tennis player, chess player .... )</div>
    <div class="py-2">
      <text class="text-lg">
        I am currently pursing Ph.D. at Johns Hopkins University working on discovery and characterization of White Dwarf-White Dwarf binaries.
      </text>
    </div>
    <div class="mt-8">
      <a class="btn" href="https://www.linkedin.com/in/gautham-adamane-pallathadka-4b271b1b7" target="_blank"> Let's connect on Linkedin!</a>
      <!-- <a href="https://github.com/manuelernestog/astrofy" target="_blank" class="btn btn-outline ml-5"> 
        Get This template -->
      </a>
    </div>
  </div>

  <div>
    <div class="text-3xl w-full font-bold mb-2">My recent papers : </div>
  </div>

  <HorizontalCard
    title="Double White Dwarf Binaries in SDSS-V DR19 : The discovery of a rare DA+DQ white dwarf binary with 31 hour orbital period"
    img="/post_img.webp"
    desc="We discover a rare DA+DQ DWD binary with 31 hour orbital period, which is only fourth such system know. Read the paper here!"
    url="https://ui.adsabs.harvard.edu/abs/2025arXiv250711618A/abstract"
    badge=""
  />
  <div class="divider my-0"></div>

